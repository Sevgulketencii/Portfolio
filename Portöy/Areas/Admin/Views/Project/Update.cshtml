
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using EntityLayer.Concrete
@model Project

<div class="col-lg-12" style="margin-top:150px">
    <div class="card">
        <div class="card-header">
            <strong>Güncellenen</strong>
            <small> Sertifika</small>
        </div>

        <div class="card-body card-block">
            <form href="/Admin/Project/Update" method="post">
                <div class="form-group">
                    <label class=" form-control-label">Project ID</label>
                    <input type="text" name="ProjectId" value="@Model.ProjectId" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Proje Adı</label>
                    <input type="text" name="ProjectName" value="@Model.ProjectName" class="form-control">
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Proje Başlık</label>
                    <input type="text" name="ProjectTitle" value="@Model.ProjectTitle" class="form-control">
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Proje Açıklama</label>
                    <textarea name="ProjectDesciription" rows="5" cols="10" class="form-control" >@Model.ProjectDescription</textarea>
                   
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Tarih</label>
                    <input type="date" name="Date" value="@Model.ProjectDate" class="form-control">
                </div>
                <div class="row form-group">
                    <div class="col-8">
                        <div class="form-group">
                            <label class="form-control-label">Proje Img Url</label>
                            <input type="text" name="ProjectImgUrl" value="@Model.ProjectImgUrl" class="form-control">
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label class=" form-control-label">Proje GitHup Url</label>
                            <input type="text" name="ProjectUrl" value="@Model.ProjectUrl" class="form-control">
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success btn-block">Güncelle</button>
            </form>
        </div>

    </div>


</div>