
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using EntityLayer.Concrete
@model Language

<div class="col-lg-12" style="margin-top:250px">
    <div class="card">
        <div class="card-header">
            <strong>Güncellenen</strong>
            <small> Sertifika</small>
        </div>

        <div class="card-body card-block">
            <form href="/Admin/Certifi" method="post">
                <div class="form-group">
                    <label class=" form-control-label">Teknoloji Id</label>
                    <input type="text" name="LanguageId" value="@Model.LanguageId" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Teknoloji Adı</label>
                    <input type="text" name="LanguageName" value="@Model.LanguageName" class="form-control">
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Teknoloji Img Url</label>
                    <input type="text" name="LanguageImgUrl" value="@Model.LanguageImgUrl" class="form-control">
                </div>
     
                <div class="form-group">
                    <label class=" form-control-label">Statü</label>
                    @if (Model.LanguageStatus == true)
                    {
                        <input type="text" value="Yayında" class="form-control" readonly>
                    }
                    else
                    {
                        <input type="text" value="Yayında Değil" class="form-control" readonly>
                    }
                </div>
                <button type="submit" class="btn btn-success btn-block">Güncelle</button>
            </form>
        </div>

    </div>


</div>

