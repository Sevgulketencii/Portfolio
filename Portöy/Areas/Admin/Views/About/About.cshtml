
@{
    ViewData["Title"] = "About";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using EntityLayer.Concrete
@model About
    <br /><br /><br /><br />
    <div class="col-md-4" style="margin:auto" >
        <div class="card">
            <div class="card-header">
                <i class="fa fa-user"></i>
                <strong class="card-title pl-2">Profil Kartı</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block">
                    <img class="rounded-circle mx-auto d-block" src="~/portföy/images/profil2.jpg" alt="Card image cap">
                    <h5 class="text-sm-center mt-2 mb-1">@Model.Name</h5><br />
                    <div class="location text-sm-center">
                        <i class="fa fa-book"></i> @Model.AboutDesciription
                    </div>
                </div>
                <hr>
                <div class="card-text text-sm-center">
                    <a href="#">
                        <i class="fa fa-facebook pr-1"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-twitter pr-1"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-linkedin pr-1"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-pinterest pr-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12" style="margin-top:50px">
        <div class="card">
            <div class="card-header">
                <strong>Hakkımdaki</strong>
                <small> Bilgiler</small>
            </div>

            <div class="card-body card-block">
                <form href="/Admin/Certifi" method="post">
                    <input type="hidden" name="id" value=@Model.AboutId />
                    <div class="form-group">
                        <label class=" form-control-label">Ad</label>
                        <input type="text" name="Name" value="@Model.Name" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Soyad</label>
                        <input type="text" name="Surname" value="@Model.Surname" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Mail</label>
                        <input type="text" name="Mail" value="@Model.Mail" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Img Url</label>
                        <input type="text" name="ImgUrl" value="@Model.ImgUrl" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Doğum Günü</label>
                        <input type="text" name="BirthDay" value="@Model.BirthDay.ToShortDateString()" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Telefon Numarası</label>
                        <input type="text" name="Phone" value="@Model.Phone" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Deneyim Yılı</label>
                        <input type="text" name="WorkingYear" value="@Model.WorkingYear" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class=" form-control-label">Mail</label>
                        <textarea type="text" name="AboutDesciription" class="form-control">@Model.AboutDesciription</textarea>
                    </div>


                    <button type="submit" class="btn btn-success btn-block">Güncelle</button>
                </form>
            </div>

        </div>


    </div>

