
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using EntityLayer.Concrete
@model Certificate

<div class="col-lg-12" style="margin-top:150px">
    <div class="card">
        <div class="card-header">
            <strong>Güncellenen</strong>
            <small> Sertifika</small>
        </div>
        
        <div class="card-body card-block">
            <form href="/Admin/Certifi" method="post">
                <div class="form-group">
                    <label class=" form-control-label">Sertifika Id</label>
                    <input type="text" name="CertificateId" value="@Model.CertificateId" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Sertifika Adı</label>
                    <input type="text" name="CertificateName" value="@Model.CertificateName" class="form-control">
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Alınan Kurum</label>
                    <input type="text" name="Company" value="@Model.Company" class="form-control">
                </div>
                <div class="row form-group">
                    <div class="col-8">
                        <div class="form-group">
                            <label class="form-control-label">Yeterlilik Url</label>
                            <input type="text" name="CertificateUrl" value="@Model.CertificateUrl" class="form-control">
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label class=" form-control-label">İmg Url</label>
                            <input type="text" name="CertificateImgUrl" value="@Model.CertificateImgUrl" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class=" form-control-label">Statü</label>
                    @if (ViewBag.statu == true)
                    {
                        <input type="text"  value="Yayında" class="form-control" readonly>
                    }
                    else
                    {
                        <input type="text"  value="Yayında Değil" class="form-control" readonly>
                    }
                </div>
                <button type="submit" class="btn btn-success btn-block">Güncelle</button>
            </form>
        </div>

    </div>
   
   
</div>



